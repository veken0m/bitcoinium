<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/minerwidget_layout"
    android:layout_width="120dp"
    android:layout_height="82dp"
    android:background="#80000000"
    android:padding="5dp">

    <TextView
        android:id="@+id/widgetMiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="1dp"
        android:text="@string/miner"
        android:textColor="#FDD017"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/widgetMinerHashrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widgetMiner"
        android:layout_centerHorizontal="true"
        android:text="@string/hashrate"
        android:textColor="#FDD017"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/widgetBTCPayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widgetMinerHashrate"
        android:layout_centerHorizontal="true"
        android:text="@string/payout"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/refreshtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widgetBTCPayout"
        android:layout_centerHorizontal="true"
        android:text="@string/time"
        android:textSize="10dp" />

    <Button
        android:id="@+id/widgetMinerButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00000000" />

</RelativeLayout>