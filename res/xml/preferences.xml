            </PreferenceCategory>
            <PreferenceCategory android:title="Power Saving" >
                <Preference
                    android:key="customPref"
                    android:summary="Widget(s) will need to be replaced for new power settings to take effect" />

                <ListPreference
                    android:defaultValue="30"
                    android:entries="@array/interval"
                    android:entryValues="@array/intervalvalues"
                    android:key="listPref"
                    android:summary="Time interval between widget refresh \n *WARNING* \nLow values will increase battery drain \n "
                    android:title="Widget Refresh Interval" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="wakeupPref"
                    android:summary="Will not wake up the phone from sleep to update widget"
                    android:title="Battery Saving Mode" />
            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory android:title="Price Alarm" >
        <PreferenceScreen
            android:key="SecondPrefScreen"
            android:summary="Adjust settings of the price alarm notification"
            android:title="Price Alarm Notification" >
            <PreferenceCategory android:title="Price Alarm" >
                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="alarmPref"
                    android:summary="Enable price alert when specified price is attained (widget needs to be active)"
                    android:title="Enable Price Alarm" />
                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="alarmSoundPref"
                    android:summary="Notification sound will play when specified price is attained"
                    android:title="Notification Sound" />
                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="alarmVibratePref"
                    android:summary="Notification will cause phone to vibrate when when specified price is attained"
                    android:title="Notification Vibration" />

                <EditTextPreference
                    android:digits="01234567890."
                    android:inputType="numberDecimal"
                    android:key="virtexUpper"
                    android:summary="Notification will occur if VirtEx price goes over this limit"
                    android:title="VirtEx Upper Limit" />
                <EditTextPreference
                    android:digits="01234567890."
                    android:inputType="numberDecimal"
                    android:key="virtexLower"
                    android:summary="Notification will occur if VirtEx price goes under this limit"
                    android:title="VirtEx Lower Limit" />
                <EditTextPreference
                    android:digits="01234567890."
                    android:inputType="numberDecimal"
                    android:key="mtgoxUpper"
                    android:summary="Notification will occur if MtGox price goes over this limit"
                    android:title="MtGox Upper Limit" />
                <EditTextPreference
                    android:digits="01234567890."
                    android:inputType="numberDecimal"
                    android:key="mtgoxLower"
                    android:summary="Notification will occur if MtGox price goes under this limit"
                    android:title="MtGox Lower Limit" />
            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory android:title="Miner Stats" >
        <ListPreference
            android:defaultValue="deepbit"
            android:entries="@array/miningpools"
            android:entryValues="@array/poolvalues"
            android:key="favpoolPref"
            android:summary="Select mining pool used for MinerStats"
            android:title="Main Mining Pool" />

        <EditTextPreference
            android:defaultValue=""
            android:key="deepbitKey"
            android:summary="Enter your Deepbit API token to use MinerStats"
            android:title="Deepbit API token" />
        <EditTextPreference
            android:defaultValue=""
            android:key="bitminterUser"
            android:summary="Enter your BitMinter Username to use MinerStats"
            android:title="BitMinter API Username" />
        <EditTextPreference
            android:defaultValue=""
            android:key="bitminterKey"
            android:summary="Enter your BitMinter API token to use MinerStats"
            android:title="BitMinter API token" />
    </PreferenceCategory>
    <PreferenceCategory android:title="OrderBook Settings" >
        <PreferenceScreen
            android:key="SecondPrefScreen"
            android:summary="Configure the OrderBook"
            android:title="OrderBook Settings" >
            <PreferenceCategory android:title="OrderBook Settings" >
                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="highlightPref"
                    android:summary="Changes the color of text in orderbook depending on depth"
                    android:title="Enable Liquidity Highlighting" />

                <EditTextPreference
                    android:defaultValue="10"
                    android:digits="01234567890"
                    android:inputType="numberDecimal"
                    android:key="highlightLower"
                    android:summary="Text will be colored RED if depth under this value"
                    android:title="Low Depth" />
                <EditTextPreference
                    android:summary="Text will be colored YELLOW if depth is between high and low"
                    android:title="Medium Depth" />
                <EditTextPreference
                    android:defaultValue="50"
                    android:digits="01234567890"
                    android:inputType="numberDecimal"
                    android:key="highlightUpper"
                    android:summary="Text will be colored GREEN if depth over this value"
                    android:title="High Depth" />
            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory android:title="Price Graph Settings" >
        <PreferenceScreen
            android:key="SecondPrefScreen"
            android:summary="Configure the Price Graph"
            android:title="Price Graph Settings" >
            <PreferenceCategory android:title="Price Graph Mode" >
                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="graphmodePref"
                    android:summary="Price graph will be displayed using original GraphView library. Classic mode displays past 2-3 days in one viewing without scrolling"
                    android:title="Classic Mode" />
            </PreferenceCategory>
            <PreferenceCategory android:title="Price Graph Settings" >
                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="graphscalePref"
                    android:summary="When the price graph is scrolled, max and min values will be reajusted to maximize viewing"
                    android:title="View Window Scaling" />

                <EditTextPreference
                    android:defaultValue="4"
                    android:digits="01234567890"
                    android:inputType="numberDecimal"
                    android:key="mtgoxWindowSize"
                    android:summary="# of hours viewable in graph window"
                    android:title="MtGox Window Size" />
                <EditTextPreference
                    android:defaultValue="36"
                    android:digits="01234567890"
                    android:inputType="numberDecimal"
                    android:key="virtexWindowSize"
                    android:summary="# of hours viewable in graph window"
                    android:title="VirtEx Window Size" />
            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>
